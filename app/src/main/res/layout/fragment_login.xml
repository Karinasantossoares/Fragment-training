<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_textlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="100dp"
        android:layout_marginStart="@dimen/margin_all"
        android:text="@string/text_enter"
        android:textColor="@color/color_blue_button"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginLeft="40dp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_login"
        android:inputType="textEmailAddress"
        android:layout_width="0dp"
        android:layout_marginHorizontal="@dimen/margin_all"
        android:layout_height="wrap_content"
        android:layout_marginVertical="50dp"
        android:hint="@string/caixa_login"
        style="@style/EditTextWhiteStyle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_textlogin" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_senha"
        android:inputType="numberPassword"
        android:layout_width="0dp"
        style="@style/EditTextWhiteStyle"
        android:layout_marginHorizontal="@dimen/margin_all"
        android:layout_height="wrap_content"
        android:hint="@string/senha"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_login"
        android:layout_marginVertical="@dimen/margin_all" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_entrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_senha"
        android:layout_marginVertical="50dp"
        app:layout_constraintLeft_toLeftOf="@id/et_senha"
        app:layout_constraintRight_toRightOf="@id/et_senha"
        android:text="@string/entrar"
        style="@style/ButtonWhiteStyle"
        android:layout_marginHorizontal="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>